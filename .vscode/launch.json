	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch via NPM",
			"request": "launch",
			"cwd": "${workspaceFolder}/debugging",
			"runtimeArgs": ["run-script", "debug"],
			"runtimeVersion": "18.17.0",
			"runtimeExecutable": "npm",
			"skipFiles": ["<node_internals>/**"],
			"envFile": "${workspaceFolder}/debugging/.env",
			"env": {
				"NODE_ENV": "debug"
			},
			"type": "node"
		}
