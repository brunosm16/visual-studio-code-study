{
	"compilerOptions": {
		"lib": ["ES6", "DOM"],
		"outDir": "dist",
		"removeComments": true,
		"target": "ES6",
		"baseUrl": "./",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"paths": {},
		"sourceMap": true,
		"sourceRoot": "/",
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src"],
	"exclude": ["node_modules/**/*"]
}
