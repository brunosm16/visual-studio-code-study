{
	"compilerOptions": {
		"lib": ["es2022"],
		"target": "es2022",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"paths": {},
		"sourceMap": true,
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src"],
	"exclude": ["node_modules/**/*"]
}
